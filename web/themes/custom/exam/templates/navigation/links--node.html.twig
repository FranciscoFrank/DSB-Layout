{# Twig for generating the HTML structure of node links (generated only in teaser view mode). #}
{% if links %}
  <div class="node--links">
  {% if heading %}
    {% if heading.level %}
      <{{ heading.level }}{{ heading.attributes }}>{{ heading.text }}</{{ heading.level }}>
    {% else %}
      <h2{{ heading.attributes }}>{{ heading.text }}</h2>
    {% endif %}
  {% endif %}
  <ul{{ attributes }}>
    {% for item in links %}
      <li{{ item.attributes }}>
        <a href="{{ item.link['#url'] }}" rel="tag" class="node-link">Read more</a>
      </li>
    {% endfor %}
  </ul>
  </div>
{% endif %}
